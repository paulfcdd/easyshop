{% extends '@App/admin/layout/list.html.twig' %}

{% block list_title %}Specifications list{% endblock %}

{% block list_content %}
    <div class="box-header">
        <a href="{{ path('app.admin.specification.add') }}" role="button" class="btn btn-success">Add specification</a>
    </div>
    <!-- /.box-header -->
    <div class="box-body">
        <table class="table table-bordered table-hover dataTable">
            <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Parent group</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for specification in specifications %}
                <tr>
                    <td>{{ specification.id }}</td>
                    <td>{{ specification.name }}</td>
                    <td>{{ specification.specificationGroup.getName }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('app.admin.specification.edit', {
                                'object': specification.id
                            }) }}"
                               type="button" class="btn btn-success">
                                <span class="fa fa-edit"></span>
                                Edit
                            </a>
                            <a href="#"
                               type="button" class="btn btn-danger js-confirm-delete">
                                <span class="fa fa-trash"></span>
                                Delete
                            </a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- /.box-body -->
{% endblock %}
