{% extends '@App/admin/base.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('node_modules/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css') }}">
{% endblock %}

{% block content_header %}
    <h2>Google analytics panel</h2>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            {% include '@App/admin/partials/_flash_messages.html.twig' %}
        </div>
    </div>

    <div class="row">
        <section class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Monthly Recap Report</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <form autocomplete="off" action="{{ path('app.admin.system.google_analytics_handle_config') }}" method="post">

                        <input autocomplete="false" name="hidden" type="text" style="display:none;">

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label for="account_id">Select active account:</label>
                                </div>
                                <div class="col-md-8">
                                    <select class="form-control" id="account_id" name="account_id">
                                        <option selected disabled>Select an account</option>

                                        {% for account in accountList %}
                                            <option value="{{ account.id }}"
                                                    {% if config.active_account_id == account.id %}selected{% endif %}>
                                                {{ account.name }}
                                            </option>
                                        {% endfor %}

                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>Select reports to show: </label>
                                </div>
                                <div class="col-md-8">
                                    {% for key, value in reportOptions %}

                                        <label class="checkbox-inline">
                                            <input type="checkbox" value="{{ key }}"
                                                   name="reports_to_show[]"
                                                    {% if key in config.reports_to_show %}
                                                        checked
                                                    {% endif %}
                                            >
                                            {{value }}
                                        </label>

                                    {% endfor %}
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-4">
                                    <label>Select dates interval: </label>
                                </div>
                                <div class="col-md-8">
                                    <div class="input-group input-daterange" id="picker-container">
                                        <input type="text" data-datepicker class="form-control actual_range" name="date_from">
                                        <div class="input-group-addon">to</div>
                                        <input type="text" data-datepicker class="form-control" name="date_to" data-date-end-date="0d">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-success">Save config</button>
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- ./box-body -->
                <div class="box-footer">

                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </section>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="{{ asset('node_modules/bootstrap-datepicker/js/bootstrap-datepicker.js') }}"></script>
    <script src="{{ asset('node_modules/bootstrap-datepicker/js/locales/bootstrap-datepicker.en-CA.js') }}"></script>

    <script>
        $('.input-daterange input').each(function() {
            $(this).datepicker({
                'autoclose': true,
                'container': '#picker-container',
                'clearBtn': true,
                'format': 'dd.mm.yyyy',
                'multidate': true,
                'minDate': 0
            }).data('datepicker').clearDates()
        });
    </script>
{% endblock %}