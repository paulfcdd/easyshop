{% extends '@App/admin/base.html.twig' %}

{% block css %}
    {{ parent() }}
{% endblock %}

{% block content_header %}
    <h2>Google analytics panel</h2>
{% endblock %}

{% block content %}

    <div class="row">
        <div class="col-md-12">
            {% include '@App/admin/partials/_flash_messages.html.twig' %}
        </div>
    </div>

    <div class="row">
        <section class="col-md-12">
            <div class="box">
                <div class="box-header with-border">
                    <h3 class="box-title">Monthly Recap Report</h3>

                </div>
                <!-- /.box-header -->
                <div class="box-body">

                    <form action="{{ path('app.admin.system.google_analytics_handle_config') }}" method="post">
                        <div class="form-group">
                            <div class="col-md-4">
                                <label for="account_id">Select active account:</label>
                            </div>
                            <div class="col-md-8">
                                <select class="form-control" id="account_id" name="account_id">
                                    <option selected disabled>Select an account</option>

                                    {% for account in accountList %}
                                        <option value="{{ account.id }}"
                                                {% if config.active_account_id == account.id %}selected{% endif %}>
                                            {{ account.name }}
                                        </option>
                                    {% endfor %}

                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4">
                                <label>Select reports to show: </label>
                            </div>
                            <div class="col-md-8">
                                {% for key, value in reportOptions %}

                                    <label class="checkbox-inline">
                                        <input type="checkbox" value="{{ key }}"
                                               name="reports_to_show[]"
                                                {% if key in config.reports_to_show %}
                                                checked
                                                {% endif %}
                                        >
                                        {{value }}
                                    </label>

                                {% endfor %}
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-12">
                                <button type="submit" class="btn btn-success">Save config</button>
                            </div>
                        </div>
                    </form>

                </div>
                <!-- ./box-body -->
                <div class="box-footer">

                </div>
                <!-- /.box-footer -->
            </div>
            <!-- /.box -->
        </section>
    </div>
{% endblock %}

{% block js %}
    {{ parent() }}
{% endblock %}